<%= simple_nested_form_for @bank, defaults: { input_html: { class: 'span5' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :phone %>
    <%= f.input :address %>
    <%= f.input :contact_name %>

    <%= f.simple_fields_for :bank_accounts do |b| %>
      <%= render partial: 'bank_accounts', locals: { b: b } %>
    <% end %>
    
    <div>
      <%= f.link_to_add "Agregar cuenta", :bank_accounts, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
