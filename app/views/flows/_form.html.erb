<%= simple_nested_form_for @flow, defaults: { required: false, input_html: { class: 'span12' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class='row-fluid'>
      <div class='span5'>
        <%= f.input :detail %>
      </div>
      <div class='span3'>
        <%= in_or_out_select_for_flow(f) %>
      </div>
      <div class='span2'>
        <%= f.input :charged_at, as: :date_picker %>
      </div>
    </div>

    <div class='row-fluid'>
      <div class='span1'>
        <%= f.input :code %>
      </div>
      <div class='span1'>
        <%= f.input :subcode %>
      </div>
      <div class='span3'>
        <%= f.input :receipt %>
      </div>
      <div class='span3'>
        <%= f.input :register %>
      </div>
    </div>

    <div id='cashes'>
      <%= f.simple_fields_for :cashes do |c| %>
        <%= render partial: 'cashes', locals: { c: c } %>
      <% end %>
    </div>
    
    <div>
      <%= f.link_to_add "Agregar dinero", :cashes, class: 'btn btn-secondary' %>
    </div>

    <div class='row-fluid'>
      <%= f.input :total_amount, input_html: { class: 'span6' } %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
