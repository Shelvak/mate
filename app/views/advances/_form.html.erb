<%= simple_form_for(@advance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :charged_at %>
    <%= f.input :detail %>
    <%= f.input :amount %>
    <%= f.input :state %>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
