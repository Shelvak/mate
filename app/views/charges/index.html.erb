<% if @charges.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Charge.human_attribute_name 'charged_at' %></th>
            <th><%= Charge.human_attribute_name 'detail' %></th>
            <th><%= Charge.human_attribute_name 'amount' %></th>
            <th><%= Charge.human_attribute_name 'state' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @charges.each do |charge| %>
            <tr>
              <td><%= l charge.charged_at, format: :long %></td>
              <td><%= charge.detail %></td>
              <td><%= number_to_currency charge.amount %></td>
              <td><%= charge.state ? 'Salida' : 'Entrada' %></td>
              <td><%= link_to_show charge %></td>
              <td><%= link_to_edit edit_charge_path(charge) if can? :update, charge %></td>
              <td><%= link_to_destroy charge if can? :destroy, charge %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@charges) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.charges.new', default: :'label.new'),
    new_charge_path, class: 'btn btn-primary'
  ) if can? :create, Charge %>
</div>
