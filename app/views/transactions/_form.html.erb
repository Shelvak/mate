<%= simple_form_for @transaction, defaults: { input_html: { class: 'span6' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :charged_at, as: :date_picker %>
    <%= f.input :amount %>
    <%= f.input :batch %>
    <%= f.input :expiration, as: :date_picker %>
    <%= f.label :place_id %>
    <%= f.input :auto_place_name, label: false, input_html: {
    value: @transaction.place, class: 'autocomplete-field span6',
    data: {
      'autocomplete-id-target' => '#transaction_place_id',
      'autocomplete-url' => autocomplete_for_place_name_transactions_path(
        format: :json
      )
     }
    }  %>
    <%= f.label :card_id %>
    <%= f.input :auto_card_name, label: false, input_html: {
    value: @transaction.card, class: 'autocomplete-field span6',
    data: {
      'autocomplete-id-target' => '#transaction_card_id',
      'autocomplete-url' => autocomplete_for_card_name_transactions_path(
        format: :json
      )
     }
    }  %>
    <%= f.input :card_id, as: :hidden,
      input_html: { class: 'autocomplete-id' } %> 
    <%= f.input :place_id, as: :hidden,
      input_html: { class: 'autocomplete-id' } %> 
</div>

<div class="form-actions">
  <div class="pull-right"><%= yield :form_actions %></div>
  <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
