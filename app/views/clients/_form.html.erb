<%= simple_form_for @client, defaults: { input_html: { class: 'span6' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :ident %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :website %>
    <%= f.label :workplace_id %>
    <%= f.input :auto_workplace_name, label: false, input_html: {
      value: @client.workplace, class: 'autocomplete-field span6',
      data: {
        'autocomplete-id-target' => '#client_workplace_id',
        'autocomplete-url' => autocomplete_for_workplace_name_clients_path(format: :json)
        }
      } %>
    <%= f.input :workplace_id, as: :hidden,
      input_html: { class: 'autocomplete-id' } %>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
