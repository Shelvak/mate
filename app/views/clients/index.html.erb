<% if @clients.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Client.human_attribute_name 'name' %></th>
            <th><%= Client.human_attribute_name 'phone' %></th>
            <th><%= Client.human_attribute_name 'email' %></th>
            <th><%= Client.human_attribute_name 'website' %></th>
            <th><%= Client.human_attribute_name 'ident' %></th>
            <th><%= Client.human_attribute_name 'workplace_id' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr>
              <td><%= client.name %></td>
              <td><%= client.phone %></td>
              <td><%= client.email %></td>
              <td><%= client.website %></td>
              <td><%= client.ident %></td>
              <td><%= client.workplace %></td>
              <td><%= link_to_show client %></td>
              <td>
                <%= link_to_edit(
                  edit_client_path(client)
                 ) if can? :update, client %>
              </td>
              <td><%= link_to_destroy client if can? :destroy, client %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@clients) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.clients.new', default: :'label.new'),
    new_client_path, class: 'btn btn-primary'
  ) if can? :create, Client %>
</div>
