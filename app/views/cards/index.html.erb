<% if @cards.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Card.human_attribute_name 'name' %></th>
            <th><%= Card.human_attribute_name 'address' %></th>
            <th><%= Card.human_attribute_name 'website' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cards.each do |card| %>
            <tr>
              <td><%= card.name %></td>
              <td><%= card.address %></td>
              <td><%= card.website %></td>
              <td><%= link_to_show card %></td>
              <td><%= link_to_edit edit_card_path(card) if can? :update, card %></td>
              <td><%= link_to_destroy card if can? :destroy, card %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@cards) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.cards.new', default: :'label.new'),
    new_card_path, class: 'btn btn-primary'
  ) if can? :create, Card %>
</div>
