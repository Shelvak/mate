<div class="readonly-data">
  <h2><%= @card %></h2>

  <p>
    <strong><%= Card.human_attribute_name 'name' %></strong>:
    <%= @card.name %>
  </p>
  <p>
    <strong><%= Card.human_attribute_name 'address' %></strong>:
    <%= @card.address %>
  </p>
  <p>
    <strong><%= Card.human_attribute_name 'website' %></strong>:
    <%= link_to_website @card.website %>
  </p>

</div>
<div class="form-actions f-actions-bottom">
  <%= link_to t('label.edit'), edit_card_path(@card) if can? :update, @card %> |
  <%= link_to t('label.list'), cards_path %>
</div>
