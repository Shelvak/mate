<%= simple_form_for @card, defaults: { input_html: { class: 'span6' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :number %>
    <%= f.input :expire_at, as: :date_picker %>

    <%= f.label :bank_id %>
    <%= f.input :auto_bank_name, label: false, input_html: {
      value: @card.bank, class: 'span6 autocomplete-field',
      data: {
        'autocomplete-id-target' => '#card_bank_id',
        'autocomplete-url' => autocomplete_for_bank_name_cards_path(
          format: :json
        )
      }
    }  %>
    <%= f.input :bank_id, as: :hidden,
      input_html: { class: 'autocomplete-id' } %>

  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
