<% if @petty_cashes.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= PettyCash.human_attribute_name 'charged_at' %></th>
            <th><%= PettyCash.human_attribute_name 'detail' %></th>
            <th><%= PettyCash.human_attribute_name 'amount' %></th>
            <th><%= PettyCash.human_attribute_name 'state' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @petty_cashes.each do |petty_cash| %>
            <tr>
              <td><%= l petty_cash.charged_at, format: :long %></td>
              <td><%= petty_cash.detail %></td>
              <td><%= number_to_currency petty_cash.amount %></td>
              <td><%= petty_cash.state ? 'Salida' : 'Entrada' %></td>
              <td><%= link_to_show petty_cash %></td>
              <td><%= link_to_edit(
                edit_petty_cash_path(petty_cash)
              ) if can? :update, petty_cash %></td>
            <td>
              <%= link_to_destroy petty_cash if can? :destroy, petty_cash %>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@petty_cashes) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.petty_cashs.new', default: :'label.new'),
    new_petty_cash_path, class: 'btn btn-primary'
  ) if can? :create, PettyCash %>
</div>
